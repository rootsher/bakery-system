extends ./_layout.jade

block content
	h1 addProduct.get

	form(action="/product/add", method="post")
		| Supplier: 
		select(name="supplierID")
			each supplier in supplierList
				option(value="#{supplier._id}") #{supplier.name}
		br

		| Name: 
		input(type="text", name="name", value="", placeholder="")
		br

		| Input unit: 
		select(name="inputUnit", class="inputUnit")
			option(value="kg") kilograms
			option(value="pcs") pieces
		br

		| Output unit: 
		select(name="outputUnit", class="outputUnit")
			option(value="kg") kilograms
			option(value="pcs") pieces
		br

		| Converter: 
		input(type="number", name="inputConvertValue", class="inputConvertValue", placeholder="kg") 
		|  is 
		input(type="number", name="outputConvertValue", class="outputConvertValue", placeholder="kg") 
		br

		| Purchase price: 
		input(type="number", name="purchasePrice", placeholder="pln") 
		|  gross
		br

		| Selling price: 
		input(type="number", name="sellingPrice", placeholder="pln") 
		|  gross
		br

		input(type="submit", name="submit", value="Add product")